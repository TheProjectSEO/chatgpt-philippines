# ============================================
# REQUIRED: Anthropic API Configuration
# ============================================
# Primary API key (required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OPTIONAL: Additional API keys for rotation and load balancing
# Uncomment and add more keys to enable automatic rotation
# ANTHROPIC_API_KEY_2=your_second_api_key_here
# ANTHROPIC_API_KEY_3=your_third_api_key_here
# ANTHROPIC_API_KEY_4=your_fourth_api_key_here

# OPTIONAL: Fallback API keys (lower priority, used when primary keys fail)
# ANTHROPIC_API_KEY_FALLBACK_1=your_fallback_key_here
# ANTHROPIC_API_KEY_FALLBACK_2=your_second_fallback_key_here

# ============================================
# OPTIONAL: Redis Configuration (for caching and queue management)
# ============================================
# If not provided, the app will work without caching (slower but functional)
# REDIS_URL=redis://localhost:6379
# Alternative format: REDIS_URL=redis://username:password@host:port/database

# ============================================
# REQUIRED: Supabase Configuration
# ============================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
# Service role key - NEVER expose to client, only use in API routes
# Get from: Supabase Dashboard -> Project Settings -> API -> service_role key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================
# REQUIRED: Auth0 Configuration
# ============================================
AUTH0_SECRET=use_openssl_rand_-base64_32
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret

# ============================================
# REQUIRED: App Configuration
# ============================================
# App URL (for internal API calls)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# OPTIONAL: Worker Configuration
# ============================================
# WORKER_CONCURRENCY=5
# WORKER_ID=worker-1

# ============================================
# OPTIONAL: Monitoring Configuration
# ============================================
# GRAFANA_PASSWORD=admin
