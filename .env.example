# Anthropic API Configuration
# Single API key (basic setup)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Multiple API keys for enterprise scaling (comma-separated)
# Recommended: 3-5 keys for moderate traffic, 10+ for enterprise scale
ANTHROPIC_API_KEYS=sk-ant-key1,sk-ant-key2,sk-ant-key3

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
# Service role key - NEVER expose to client, only use in API routes
# Get from: Supabase Dashboard -> Project Settings -> API -> service_role key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Auth0 Configuration
AUTH0_SECRET=use_openssl_rand_-base64_32
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret

# App URL (for internal API calls)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===== ENTERPRISE SCALING CONFIGURATION =====

# Cache Configuration
CACHE_TTL=3600                      # Cache time-to-live in seconds (default: 1 hour)
MAX_CACHE_SIZE=10000                # Maximum number of cache entries
API_VERSION=1.0                     # API version for cache invalidation

# Semantic Cache Configuration
SEMANTIC_CACHE_THRESHOLD=0.92       # Similarity threshold (0.0-1.0, higher = stricter)
SEMANTIC_CACHE_MAX_ENTRIES=5000     # Maximum semantic cache entries
SEMANTIC_CACHE_TTL=86400            # Semantic cache TTL (default: 24 hours)

# Queue Configuration
MAX_QUEUE_CONCURRENT=10             # Max concurrent jobs in queue
QUEUE_POLL_INTERVAL=1000            # Worker poll interval in milliseconds
QUEUE_MAX_ATTEMPTS=3                # Max retry attempts for failed jobs
QUEUE_TIMEOUT=300000                # Job timeout in milliseconds (5 minutes)

# Worker Configuration
WORKER_CONCURRENCY=5                # Number of concurrent workers
WORKER_AUTO_RESTART=true            # Auto-restart failed workers
WORKER_GRACEFUL_SHUTDOWN=true       # Enable graceful shutdown

# Monitoring Configuration
METRICS_ENABLED=true                # Enable Prometheus metrics
HEALTH_CHECK_INTERVAL=30000         # Health check interval in milliseconds

# Redis Configuration (optional - for distributed caching/queuing)
REDIS_URL=redis://localhost:6379    # Redis connection URL
REDIS_PASSWORD=                     # Redis password (if required)
REDIS_DB=0                          # Redis database number
