    "lucide-react": "^0.553.0",
    "next": "^14.2.0",
    "papaparse": "^5.5.3",
    "pptxgenjs": "^4.0.1",
    "qrcode": "^1.5.4",
    "react": "^18.3.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18.3.0",
    "react-markdown": "^9.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "redis": "^4.6.0",
    "uuid": "^10.0.0",
    "web-vitals": "^5.1.0",
    "xlsx": "^0.18.5",
    "zod": "^4.1.12"
  },
