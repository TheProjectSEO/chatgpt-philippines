{
  "name": "chatgpt-philippines",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "worker": "ts-node workers/chatWorker.ts",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:critical": "playwright test tests/e2e/critical-paths.spec.ts",
    "test:tools": "playwright test tests/e2e/tool-functionality.spec.ts",
    "test:ratelimit": "playwright test tests/e2e/rate-limiting.spec.ts",
    "test:blog": "playwright test tests/e2e/blog.spec.ts",
    "test:security": "playwright test tests/e2e/security.spec.ts",
    "test:analytics": "playwright test tests/e2e/analytics.spec.ts",
    "test:api": "playwright test tests/e2e/api-functionality.spec.ts",
    "test:production": "playwright test tests/e2e/production-verification.spec.ts",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:preview": "VERCEL_PREVIEW_URL=$VERCEL_URL playwright test tests/e2e/production-verification.spec.ts",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:desktop": "playwright test --project='chromium' --project='firefox' --project='webkit'",
    "test:chrome": "playwright test --project='chromium'",
    "test:debug": "playwright test --debug",
    "docker:build": "docker build -t chatgpt-philippines .",
    "docker:build:worker": "docker build -t chatgpt-philippines-worker -f Dockerfile.worker .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "load-test:locust": "cd load-testing && locust -f locustfile.py",
    "load-test:k6": "k6 run load-testing/k6-script.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@auth0/nextjs-auth0": "^4.12.1",
